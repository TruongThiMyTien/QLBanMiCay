<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Laptop Shop</title>

    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

</head>
<body id="top">

    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-warning shadow">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="bi bi-shop"></i> Umegu</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">Danh mục</a>
                        <ul class="dropdown-menu">

                            @foreach (var i in (List<DanhMuc>)ViewBag.danhmuc)
                            {
                <li><a class="dropdown-item" asp-controller="Home" asp-action="index1" asp-route-id="@i.Madm">@i.Ten</a></li>}

                        </ul>
                    </li>

                </ul>
                <div class="d-flex">
                    <div class="d-flex flex-row">
                        <form asp-controller="Home" asp-action="Search">
                            <input type="search" name="SearchKey" placeholder="Tìm kiếm...." class="form-control" />
                        </form>

                    </div>
                    @if (ViewBag.khachhang != null)
                    {
        <a asp-controller="Home" asp-action="Customer" class="btn btn-outline-light mx-1"><i class="bi bi-person"></i>@ViewBag.khachhang.Ten</a> }
    else
    {
<a asp-controller="Home" asp-action="Login" class="btn btn-outline-light mx-1"><i class="bi bi-person"></i> Đăng nhập</a>}

                    <!--<span class="badge bg-danger text-white ms-1 rounded-pill"></span>-->
                    <a class="btn btn-outline-light" asp-controller="Home" asp-action="ViewCart"><i class="bi bi-cart3"></i> Giỏ hàng <span class="badge bg-danger text-white ms-1 rounded-pill">@ViewData["SoLuongGioHang"]</span></a>
                </div>
            </div>
        </div>
    </nav>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-1">
            @RenderBody()
        </div>
    </section>




    <!-- Footer-->
    <footer class="py-5 bg-warning">
        <div class="text-center mb-5"><a class="text-warning" href="#top"><i class="bi bi-chevron-up" style="font-size: 3rem; font-weight: bold; color:black;"></i></a></div>

        <div class="container">
            <div class="row">
                <div class="col-6 text-light">
                    <h4>
                        <i class="bi bi-shop"></i>Cửa hàng mì cay Umegu
                    </h4>
                    <p>
                        <b><i>Địa chỉ:</i></b> 18 Ung Văn Khiêm, phường Đông Xuyên, TP Long Xuyên, An Giang<br>
                        <b><i>Điện thoại:</i></b> 0123456798<br>
                        <b><i>Email:</i></b> abc@gmail.com
                    </p>
                </div>
                <div class="col-3 text-muted">
                    <h4>DANH MỤC HÀNG</h4>
                    @foreach (var i in (List<DanhMuc>)ViewBag.danhmuc)
                    {
        <a class="list-group-item" asp-action="index1" asp-route-id="@i.Madm">@i.Ten</a>}

                </div>
                <div class="col-3 text-muted">
                    <h4>DỊCH VỤ KHÁCH HÀNG</h4>
                    <a href="#" class="list-group-item">Hướng dẫn mua hàng</a>
                    <a href="#" class="list-group-item">Câu hỏi thường gặp</a>
                    <a href="#" class="list-group-item">Liên hệ với chúng tôi</a>
                </div>
            </div>
            <hr>
            <p class="m-0 text-center text-black-50 fw-bolder">Copyright &copy; Cửa hàng mì cay Umegu</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


