@model IEnumerable<BanMiCay.Models.MatHang>

@{ ViewData["Title"] = "Index"; }

<h3 class="text-danger p-5">Sản phẩm theo danh mục</h3>
<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
    @foreach (var item in Model)
    {
<div class="col mb-5">
    <div class="card h-100">
        <!-- Sale badge-->
        @if (int.Parse(item.Giagoc.ToString()) > int.Parse(item.Giaban.ToString()))
        {
<div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Giảm giá</div>                }

        <!-- Product image-->
        <a class="text-decoration-none" asp-controller="Home" asp-action="Details" asp-route-id="@item.Mamh">
            <img class="card-img-top" src="~/images/product/@Html.DisplayFor(modelItem => item.Hinhanh)" alt="..." />
        </a>

        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <a class="text-decoration-none" asp-controller="Home" asp-action="Details" asp-route-id="@item.Mamh">
                    <h5 class="fw-bolder text-dark">@Html.DisplayFor(modelItem => item.Ten)</h5>
                </a>
                <!-- Product price-->
                @if (int.Parse(item.Giagoc.ToString()) == int.Parse(item.Giaban.ToString()))
                {
<span class="text-danger fw-bolder">@Html.DisplayFor(modelItem => item.Giaban)đ</span> }
                else
                {
<span class="text-muted text-decoration-line-through">@Html.DisplayFor(modelItem => item.Giagoc)đ</span>
                    <span class="text-danger fw-bolder">@Html.DisplayFor(modelItem => item.Giaban)đ</span>}
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-info mt-auto" asp-action="AddToCart" asp-route-id="@item.Mamh">Chọn mua</a></div>
        </div>
    </div>
</div>}

</div>
